{
  "name": "sumot",
  "version": "1.0.2",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "sql.js": "^1.9.0"
  },
  "devDependencies": {
    "electron": "32.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.0pie.sumot",
    "productName": "Sumot",
    "publish": "never",
    "files": [
      "src/**/*",
      "assets/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "Sumot-${version}.exe"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "Sumot-${version}.AppImage"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "Sumot-${version}.dmg"
    }
  }
}
