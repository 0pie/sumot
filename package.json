{
  "name": "sumot",
  "version": "1.0.2",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.0pie.sumot",
    "productName": "Sumot",
    "files": [
      "src/**/*",
      "assets/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "Sumot-${version}.exe"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "Sumot-${version}.AppImage"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "Sumot-${version}.dmg"
    }
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^24.13.3"
  }
}
